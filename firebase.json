{
  "hosting": {
    "public": "_site",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "legal",
        "destination": "/legal.html"
      },
      {
        "source": "en",
        "destination": "/en.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
